<ScreanSelected, Courses, Plan, Messege>:
   
    orientation: 'vertical'
    padding: 5
    spacing: 2


    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'nllogolgg6.png'

    ActionBar:
        pos_hint:{'top' : 1}
        size_hint_y:.06
        ActionView:
            ActionPrevious:
                title: 'No Limits'
                with_previous: False
                
            ActionGroup:
                text: 'Menu'
                color: 1,0,0,1
                ActionButton:
                    text: 'Menu'
                    blod: True
                    on_press: root.manager.current = 'main'
                ActionButton:
                    text: 'Courses'
                    blod: True
                    on_press: root.manager.current = 'courses'
                ActionButton:
                    text: 'Plan'
                    blod: True
                    on_press: root.manager.current = 'plan'

