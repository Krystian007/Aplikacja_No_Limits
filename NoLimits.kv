<MainButton@Button>:
    color: 1,1,1,1
    blod: True
    background_color: 0,0,0,0.5
    font_size: 32
    text_size: self.size
    valign: 'middle'
    halign: 'center'

<MainSpinner@Spinner>:   
    color: 1,1,1,1
    blod: True
    background_color: 0,0,0,0.5
