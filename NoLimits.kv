<ScreanSelected>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y:.94
        MainButton:
            text: 'Courses'
            on_press: root.manager.current = 'courses'
        MainButton:
            text: 'Plan'
            on_press: root.manager.current = 'plan'



