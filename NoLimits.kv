<Courses>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y:.94

        MainButton:
            text: 'Add a course'
            on_press: root.manager.current = 'addacourse'
        MainButton:
            text: 'Update the date'
            on_press: root.manager.current = 'updatethedate'
        MainButton:
            text: 'Show my courses'
            on_press: root.manager.current = 'showmycourses'
        MainButton:
            text: 'Close the course'
            on_press: root.manager.current = 'closethecourse'

